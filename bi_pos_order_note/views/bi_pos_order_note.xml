<odoo>
	<data>
		<template id='assets_pos_order_note' name='pos_order_note' inherit_id='point_of_sale.assets'>
			<xpath expr='.' position='inside'>
				<script type='text/javascript' src='/bi_pos_order_note/static/src/js/models.js'/>
				<script type='text/javascript' src='/bi_pos_order_note/static/src/js/PosNoteButton.js'/>
			</xpath>
		</template>

		<record id="inherit_view_pos_orderline_note" model="ir.ui.view">
			<field name="name">inherit_pos_orderline_note_tree</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/notebook/page/field[@name='lines']//tree/field[@name='discount']" position="after">
					<field name="notes_product_line" />  
				</xpath>
				<xpath expr="//form/sheet/notebook/page/field[@name='lines']//form/group/field[@name='discount']" position="after">
					<field name="notes_product_line" />  
				</xpath>

			</field>
		</record>
		
	</data>
</odoo>
