<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
                <div id="my_button" class="button js_invoice"
                     t-on-click="IsCustomButton" data-toggle="modal" data-target="#myModal">
                    <i class="fa fa-list"/>
                    Invoice Detail
                </div>

            <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <span class="close" t-on-click="closeButton"><i class="fa fa-window-close" aria-hidden="true"/></span>
                                    <h2 style="text-align: center;">Invoice Detail</h2>
                                </div>
                                <div class="modal-body">
                                    <div class="field-row">
                                        <div class="label-field label">
                                            <span>Invoice Prefix: </span>
                                        </div>
                                        <div class="edit-view-field">
                                            <select name="invoice_prefix" id="invoice_prefix" class="form-control"/>
                                        </div>
                                    </div>

                                    <div class="field-row">
                                        <div class="label-field label">
                                            <span>Invoice Date: </span>
                                        </div>
                                        <div class="edit-view-field">
                                            <input type="date" class="form-control" id="invoice_date" name="invoice_date" value=""/>
                                        </div>
                                    </div>

                                    <div class="field-row">
                                        <div class="label-field label">
                                            <span>Remark: </span>
                                        </div>
                                        <div class="edit-view-field">
                                            <textarea id="remark" name="remark" rows="4"
                                                      cols="40" class="form-control"/>
                                        </div>
                                    </div>

                                    <div class="field-row">
                                        <div class="label-field label">
                                            <span>Remark Internal: </span>
                                        </div>
                                        <div class="edit-view-field">
                                            <textarea id="remark_internal" name="remark_internal" rows="4"
                                                      cols="40" class="form-control"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" t-on-click="closeButton">Close</button>
                                </div>
                            </div>
                        </div>
                </div>
        </xpath>
    </t>
</templates>