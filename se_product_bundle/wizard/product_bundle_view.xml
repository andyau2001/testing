<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="product_bundle_wizard_form" model="ir.ui.view">
	<field name="name">product.bundle.wizard.form</field>
	<field name="model">product.bundle.wizard</field>
	<field name="arch" type="xml">
		<form>
			<group>
				<field name="product_bundle_id"  context="{'default_is_bundle': True}"/>
				<field name="qty"/>
				<field name="price"/>
			</group>
			<group>
				<field name="product_bundle_ids" readonly="1"/>
			</group>
			<footer>
				<button name="add_bundle_in_so" string="Add Bundle" type="object" class="oe_highlight" />
				<button string="Cancel" class="oe_link" special="cancel" />
			</footer>
		</form>
	</field>
</record>

<record id="action_product_bundle_wizard" model="ir.actions.act_window">
	<field name="name">Add Product Bundle</field>
	<field name="res_model">product.bundle.wizard</field>
<!--	<field name="view_type">form</field>-->
	<field name="view_mode">form</field>
	<field name="view_id" ref="product_bundle_wizard_form"/>
	<field name="target">new</field>
</record>

</odoo>
