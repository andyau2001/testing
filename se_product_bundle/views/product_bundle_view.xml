<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="product_bundle_form_view" model="ir.ui.view">
    <field name="name">product_bundle.form</field>
    <field name="model">product.bundle</field>
    <field name="arch" type="xml">
        <form create="false" edit="false">
            <sheet>
                <group name="info">
                    <group>
                        <field name="product_id"/>
                        <field name="product_uom_id"/>
                        <field name="product_qty"/>
                        <field name="cost"/>
                        <field name="price"/>
                        <field name="discount"/>
                        <field name="price_total"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="product_bundle_tree_view" model="ir.ui.view">
    <field name="name">product_bundle.tree</field>
    <field name="model">product.bundle</field>
    <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="product_id"/>
            <field name="product_uom_id"/>
            <field name="product_qty"/>
            <field name="cost"/>
            <field name="price"/>
            <field name="discount"/>
            <field name="price_total" force_save="1" sum="Total"/>
        </tree>
    </field>
</record>

<record id="action_prd_bundle" model="ir.actions.act_window">
    <field name="name">Product Bundles</field>
    <field name="res_model">product.template</field>
    <field name="domain">[('is_bundle', '=', True)]</field>
    <field name="context">{'default_is_bundle':True}</field>
<!--    <field name="view_type">form</field>-->
    <field name="view_mode">kanban,tree,form</field>
</record>

<menuitem id="menu_prd_bundle_main" name="Product Bundles" parent="sale.product_menu_catalog" sequence="12" action="action_prd_bundle"/>

</odoo>

