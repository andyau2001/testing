<odoo>

    <record id="view_move_form_customer_sale_form" model="ir.ui.view">
        <field name="name">account.move.customer.sale</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after" >
            	<field name="multi_so" attrs="{'invisible': ['|',('state', '&lt;&gt;', 'draft'),('move_type' ,'!=','out_invoice')]}" class="oe_edit_only"/>
                <field name="sale_id" attrs="{'invisible': [('multi_so','=',False)]}" class="oe_edit_only"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='company_id']" position="after">
                <field name="so_line_id" invisible="1"/>
                <field name="sale_id" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='company_id']" position="after">
                <field name="so_line_id" invisible="1"/>
                <field name="sale_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_form_inherit_sale" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.sale</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="before">
                <field name="sale_id" readonly="1"/>
            </field>
        </field>
    </record>
    
</odoo>
